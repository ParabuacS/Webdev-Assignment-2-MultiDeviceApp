<%- include('../partials/header') %>
<!--this is for writing A NEW CHAPTER-->
<main class="container mx-auto px-6 py-10 max-w-3xl">
    <div class="mb-8">
        <a href="/book/<%= book._id %>" class="text-emerald-700 hover:text-emerald-900 font-medium transition-colors flex items-center gap-2">
        <!--See that arrow in span?--><span>‚Üê</span> Back to <%= book.title %></a>
        <!--That and a few other special characters were generated by ChatGPT for me to copy paste-->
        <!--Why? It was a much bigger hassle to use image URLs so I resorted to this-->
        <h1 class="text-3xl font-bold text-slate-900 mt-4">New Chapter: <%= book.title %></h1>
    </div>
    <!--This is box structure showing any and all information a chapter needs-->
    <form action="/book/<%= book._id %>/add-chapter" method="POST" class="bg-white p-8 rounded-2xl border border-slate-200 shadow-sm space-y-6">
        <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">Chapter Title</label>
            <input type="text" name="title" placeholder="e.g. The Beginning" required 
                   class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 outline-none transition-all">
        </div>
        <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">Chapter Number</label>
            <input type="number" name="chapterNumber" placeholder="1" required 
                   class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 outline-none transition-all">
        </div>
        <div>
            <label class="block text-sm font-semibold text-slate-700 mb-2">Story Content</label>
            <textarea name="content" rows="15" placeholder="Once upon a time..." required 
                      class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 outline-none transition-all"></textarea>
        </div>
        <button type="submit" class="w-full bg-emerald-600 text-white font-bold py-4 rounded-xl hover:bg-emerald-700 transition shadow-lg shadow-emerald-100">
            Publish Chapter
        </button>
    </form>
</main>

<%- include('../partials/footer') %>